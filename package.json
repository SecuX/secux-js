{
  "name": "secuxjs",
  "workspaces": [
    "packages/!(sdk)/**"
  ],
  "scripts": {
    "test:webusb": "npx webpack serve --progress --config ./webpack.config.js --output-path ./__tests__ --entry ./__tests__/usb.js --port 8081",
    "test:webble": "npx webpack serve --progress --config ./webpack.config.js --output-path ./__tests__ --entry ./__tests__/ble.js --port 8081",
    "test:virtual": "npx webpack serve --progress --config ./webpack.config.js --output-path ./__tests__ --entry ./__tests__/virtual.js --port 8081",
    "publish": "lerna publish",
    "release": "lerna run tsc && lerna publish from-package",
    "bump": "lerna publish from-package",
    "version": "lerna version --no-git-tag-version",
    "bootstrap": "lerna run tsc && lerna bootstrap",
    "watch": "lerna run watch"
  },
  "devDependencies": {
    "@secux/app-bnb": "file:packages/app-bnb",
    "@secux/app-btc": "file:packages/app-btc",
    "@secux/app-eth": "file:packages/app-eth",
    "@secux/app-fil": "file:packages/app-fil",
    "@secux/app-luna": "file:packages/app-luna",
    "@secux/app-sol": "file:packages/app-sol",
    "@secux/app-trx": "file:packages/app-trx",
    "@secux/app-xlm": "file:packages/app-xlm",
    "@secux/app-xrp": "file:packages/app-xrp",
    "@secux/protocol-device": "file:packages/protocol-device",
    "@secux/protocol-transaction": "file:packages/protocol-transaction",
    "@secux/transport": "file:packages/transport",
    "@secux/transport-handler": "file:packages/transport-handler",
    "@secux/transport-reactnative": "file:packages/transport-reactnative",
    "@secux/transport-virtual": "file:packages/transport-virtual",
    "@secux/transport-webble": "file:packages/transport-webble",
    "@secux/transport-webhid": "file:packages/transport-webhid",
    "@secux/transport-webusb": "file:packages/transport-webusb",
    "@secux/utility": "file:packages/utility",
    "@types/node": "^16.4.13",
    "agent-base": "^6.0.2",
    "chai": "^4.3.4",
    "crypto-browserify": "^3.12.0",
    "lerna": "^3.20.2",
    "mocha": "^9.0.3",
    "multicoin-address-validator": "^0.5.2",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "stream-browserify": "^3.0.0",
    "terser": "^5.9.0",
    "ts-loader": "^9.2.5",
    "typescript": "4.7.4",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.0",
    "winston": "^3.3.3",
    "yarn": "^1.22.15"
  }
}
